<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="course.labs.modernartui.MainActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lineChangeSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/colorView1"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/colorView2"
            android:layout_toStartOf="@+id/colorView2"
            android:ems="10" />

        <TextView
            android:id="@+id/colorView2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:ems="10" />

        <TextView
            android:id="@+id/colorView3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/colorView1"
            android:layout_margin="2dp"
            android:ems="10" />

        <TextView
            android:id="@+id/colorView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/colorView2"
            android:layout_margin="2dp"
            android:layout_toEndOf="@+id/colorView3"
            android:layout_toRightOf="@+id/colorView3"
            android:ems="10" />

        <TextView
            android:id="@+id/colorView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/colorView1"
            android:layout_alignEnd="@+id/colorView3"
            android:layout_alignLeft="@+id/colorView2"
            android:layout_alignRight="@+id/colorView3"
            android:layout_alignStart="@+id/colorView3"
            android:layout_alignTop="@+id/colorView4"
            android:ems="10" />
    </RelativeLayout>

    <SeekBar
        android:id="@+id/colorChangeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lineChangeSeekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lineChangeSeekBar" />

    <SeekBar
        android:id="@+id/lineChangeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/colorChangeSeekBar"
        android:layout_toEndOf="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lineChangeSeekBar"
        android:src="@android:drawable/ic_dialog_dialer" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/colorChangeSeekBar"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>